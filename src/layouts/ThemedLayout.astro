---
import StarField from '../components/solid/StarField';
import BaseLayout from './BaseLayout.astro';

const { backgroundImage, alignItems, excludeStarField } = Astro.props;
const style = `--alignItems: ${alignItems || 'center'}`;
---

<BaseLayout backgroundImage={backgroundImage}>
  <slot name="head" slot="head" />
  <section style={style}>
    {!excludeStarField && <StarField />}
    <slot />
  </section>
</BaseLayout>

<style>
  html,
  body {
    background-color: var(--color-background-primary);
    color: var(--color-text-primary);
  }
  section {
    display: flex;
    align-items: var(--alignItems, center);
    justify-content: center;
    gap: var(--space-md);
    padding: var(--space-md);
    min-height: calc(100dvh - var(--size-height-header) + var(--size-width-border-sm));
    @media print {
      display: block;
      padding: var(--gap, 1em);
    }
  }
</style>
