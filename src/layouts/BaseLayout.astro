---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';

type Props = {
  title?: string;
  description?: string;
  image?: string;
};

const { title, description, image } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <slot name="head" />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
