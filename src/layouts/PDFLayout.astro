---
import BaseLayout from './BaseLayout.astro';
---

<BaseLayout>
  <slot name="head" slot="head" />
  <section id="pdf" class="pdf">
    <slot />
  </section>
</BaseLayout>

<style>
  :root {
    --gap-xs: 0.25em;
    --gap-sm: 0.5em;
    --gap: 1em;
    --gap-lg: 2em;
    --gap-xl: 4em;
    --color-accent: #f2f2f2;
    --border-width: 1px;
    --border: var(--border-width) solid var(--color-accent);
    --border-alternate: var(--border-width) dashed var(--color-accent);
    --size-letter: 794px;
  }
  body {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: stretch;
    gap: var(--gap, 1rem);
    font-size: 1rem;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
  }
  .pdf {
    margin: auto;
    max-width: calc(var(--size-letter) + (2 * var(--gap, 1em)));
    width: 100%;
    padding: var(--gap, 1em);
    display: flex;
    flex-flow: column nowrap;
    font-size: 1em;
    @media print {
      max-width: none;
      padding: 0;
      margin: var(--gap, 1em);
      width: calc(100% - (2 * var(--gap, 1em)));
    }
  }
</style>
