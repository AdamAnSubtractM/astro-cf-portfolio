---
import BaseLayout from './BaseLayout.astro';
---

<BaseLayout>
  <section class="resume">
    <slot />
  </section>
</BaseLayout>

<style>
  :root {
    --gap-xs: 0.25rem;
    --gap-sm: 0.5rem;
    --gap: 1rem;
    --gap-lg: 2rem;
    --gap-xl: 4rem;
    --color-accent: #f2f2f2;
    --border-width: 1px;
    --border: var(--border-width) solid var(--color-accent);
    --border-alternate: var(--border-width) dashed var(--color-accent);
    --size-letter: 794px;
  }
  body {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: stretch;
    gap: var(--gap, 1rem);
    font-size: 1rem;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
  }
  .resume {
    margin: auto;
    max-width: calc(var(--size-letter) + (2 * var(--gap, 1rem)));
    width: 100%;
    padding: var(--gap, 1rem);
    display: flex;
    flex-flow: column nowrap;
    @media print {
      max-width: none;
      padding: 0;
      margin: var(--gap, 1rem);
      width: calc(100% - (2 * var(--gap, 1rem)));
    }
  }
</style>
