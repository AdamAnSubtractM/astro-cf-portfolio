---
import { PortableText } from 'astro-portabletext';
import type { PortableTextBlock } from '@portabletext/types';

type SkillsColumn = {
  title: string;
  skillsContent: PortableTextBlock;
};

type Props = {
  skills: SkillsColumn[];
};

const { skills } = Astro.props;
---

{
  skills?.length && (
    <div>
      {skills?.map((skillsColumn: SkillsColumn) => (
        <>{skillsColumn?.skillsContent && <PortableText value={skillsColumn.skillsContent} />}</>
      ))}
    </div>
  )
}

<style>
  div {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    page-break-inside: avoid;
    padding: var(--gap-sm, 0.5em) 0;
    gap: 0;
    @media all and (min-width: 580px) {
      flex-flow: row wrap;
      gap: var(--gap-sm, 0.5em);
    }
    ul {
      margin: 0;
      @media all and (min-width: 580px) {
        width: calc(25% - var(--gap-sm, 0.5em));
      }
    }
  }
</style>
