---
type Props = {
  title: string;
};

const { title } = Astro.props;
---

{
  Astro.slots.has('default') && (
    <section class="section">
      <h2>{title}</h2>
      <slot />
    </section>
  )
}

<style>
  h2 {
    font-weight: 900;
    font-size: 1.5rem;
    border-bottom: var(--border);
    padding-bottom: var(--gap-sm, 0.5rem);
    margin-bottom: 0;
    page-break-after: avoid;
  }
  section {
    padding: 0 var(--gap, 1rem);
    p {
      margin: 0;
      padding: 0;
    }
    ul {
      margin: 0.5rem 0;
    }
  }
</style>
