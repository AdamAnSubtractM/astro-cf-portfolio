---
type Props = {
  title?: string;
  includePadding?: boolean;
  isImportant?: boolean;
};

const { title, includePadding, isImportant } = Astro.props;

const classes = ['section', includePadding && 'padding', isImportant && 'important'].filter(Boolean).join(' ');
---

<section class={classes}>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  h2 {
    font-weight: 900;
    font-size: 1.5em;
    border-bottom: var(--border);
    padding-bottom: var(--gap-sm, 0.5em);
    margin-bottom: 0;
    page-break-after: avoid;
    color: var(--color-secondary-light-gray);
    @media print {
      color: var(--color-secondary-charcoal-gray);
    }
  }
  section {
    padding: 0 var(--gap, 1em);
    p {
      margin: 0;
      padding: 0;
    }
    ul {
      margin: 0.5em 0;
    }
  }
  section.padding {
    padding: var(--gap, 1em);
  }
  section.important {
    color: var(--color-secondary-light-gray);
    @media print {
      color: var(--color-secondary-charcoal-gray);
    }
  }
</style>
