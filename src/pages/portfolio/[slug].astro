---
import ThemedLayout from '../../layouts/ThemedLayout.astro';
import PortfolioSection from '../../components/astro/PortfolioSection.astro';
import { getPortfolioPieces, getPortfolioPiece } from '../../utils/sanity';
import Button from '../../components/solid/Button';
import { TagsList } from '../../components/solid/TagsList';
import StickyWrapper from '../../components/astro/StickyWrapper.astro';

// Define the type for portfolio pieces
type PortfolioPiece = {
  slug: string;
};

// 1. Staticâ€generate all slugs at build time
export async function getStaticPaths() {
  const portfolioGallery = await getPortfolioPieces();
  return portfolioGallery?.pieces?.map((piece: any) => ({ params: { slug: piece.slug?.current } }));
}

// 2. Pull slug from Astro.params and fetch directly
const { slug } = Astro.params;
const piece = await getPortfolioPiece(slug);

// 3. Handle 404 if no piece is found
if (!piece) {
  throw new Error(`No portfolio piece found for slug: ${slug}`);
}
---

<ThemedLayout title={piece.title}>
  <main>
    <article>
      <section>
        <div class="image-wrapper">
          <img src={piece.featuredImageUrl} alt={piece.title} />
        </div>
        <div class="intro content-block">
          <h1>{piece.title}</h1>
          <p>{piece.description}</p>
          <Button href="#portfolio-section-0">Learn More Below</Button>
          <TagsList title="Tech used in this project:" slides={piece.tags} />
        </div>
      </section>
      {
        piece.sections?.map((section: unknown, index: number) => (
          <PortfolioSection section={section} index={index} alternate={Boolean(index % 2 !== 0)} />
        ))
      }
      <StickyWrapper>
        {
          !piece.repoUrl && (
            <div class="info">
              <>
                <p>
                  <b>Why is this repository link disabled?</b>
                </p>
                <p class="description">
                  Many of my projects are required to be in private repositories. I'm happy to dicuss any of my projects
                  in further detail.
                </p>
              </>
            </div>
          )
        }
        <Button href={piece.repoUrl} target="_blank">View Repo</Button>
        {
          piece.launchUrl && (
            <Button variant="secondary-alternate" href={piece.launchUrl} target="_blank">
              Launch Project
            </Button>
          )
        }
      </StickyWrapper>
    </article>
  </main>

  <style>
    main {
      display: flex;
      flex-flow: column nowrap;
      justify-content: space-between;
      align-items: center;
      max-width: var(--size-width-content);
      gap: var(--space-md);
      margin: var(--space-xl) 0;
    }
    article {
      display: flex;
      flex-flow: column nowrap;
      justify-content: space-between;
      align-items: center;
      gap: var(--space-md);
      @media (min-width: 48rem) {
        /* Styles for 768px and up */
        gap: var(--space-2xl);
      }
    }
    section {
      display: flex;
      flex-flow: column wrap;
      justify-content: space-between;
      align-items: stretch;
      gap: var(--space-md);
      width: 100%;
      @media (min-width: 48rem) {
        /* Styles for 768px and up */
        flex-flow: row nowrap;
        gap: var(--space-2xl);
      }
    }
    h1 {
      font-size: clamp(3rem, 4vw, 6rem);
      margin: 0;
    }
    .intro {
      display: flex;
      flex-flow: column nowrap;
      justify-content: space-evenly;
      gap: var(--space-md);
      font-size: clamp(1.8rem, 2vw, 2.5rem);
      line-height: 1.2;
      color: var(--color-secondary-light-gray);
      order: -1;
      p {
        margin-top: 0;
      }
      .button {
        max-width: fit-content;
        font-size: var(--font-size-md);
      }
      @media (min-width: 48rem) {
        /* Styles for 768px and up */
        order: 1;
      }
    }
    .info {
      max-width: 700px;
      border-radius: var(--radius-sm);
      background-color: var(--size-width-border-sm) solid var(--color-secondary-lavender-gray);
      font-weight: var(--font-weight-bold);
    }

    .info p {
      margin: 0;
    }

    .info .description {
      font-weight: normal;
      font-size: var(--font-size-sm);
    }
    :global(img) {
      max-width: 100%;
    }
    :global(.content-block) {
      padding: var(--space-2xl);
      border: 1px solid var(--color-secondary-lavender-gray);
      border-radius: var(--radius-sm);
      width: 100%;
      font-size: var(--font-size-md);
      text-transform: none;
      @media (min-width: 48rem) {
        font-size: var(--font-size-lg);
      }
      h2 {
        font-size: var(--font-size-2xl);
        text-transform: lowercase;
        color: var(--color-secondary-light-gray);
      }
      ul {
        display: flex;
        flex-flow: column wrap;
        justify-content: space-between;
        gap: var(--space-md);
        ul {
          margin-top: var(--space-md);
        }
      }
    }
    :global(.image-wrapper) {
      --pattern-size: 18%;
      display: flex;
      background-image: url('data:image/svg+xml;base64,');
      background-repeat: repeat;
      background-size: var(--pattern-size);
      width: 100%;
      max-width: 100%;
      border: 2px solid var(--color-secondary-lavender-gray-30);
      border-radius: var(--radius-sm);
      overflow: hidden;
      padding: var(--space-xl);
      place-content: center;
      @media (min-width: 48rem) {
        max-width: 50%;
      }
      img {
        border-radius: var(--radius-sm);
        object-fit: contain;
      }
    }
  </style>
</ThemedLayout>
